<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.b3ds.dicom</groupId>
  <artifactId>DicomConverter</artifactId>
 
  <version>1.0</version>


	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>maven-compiler-plugin</groupId>
				<artifactId>org.apache.maven.plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
	<dependency>
    	<groupId>org.dcm4che</groupId>
    	<artifactId>dcm4che-json</artifactId>
    	<version>5.14.1</version>
	</dependency>
	<dependency>
    	<groupId>org.dcm4che.tool</groupId>
    	<artifactId>dcm4che-tool-common</artifactId>
    	<version>5.14.1</version>
	</dependency>
	<dependency>
    	<groupId>org.slf4j</groupId>
    	<artifactId>slf4j-log4j12</artifactId>
    	<version>1.7.25</version>
	</dependency>
	<dependency>
    <groupId>org.apache.commons</groupId>
    <artifactId>commons-io</artifactId>
    <version>1.3.2</version>
</dependency>
<dependency>
    <groupId>com.googlecode.json-simple</groupId>
    <artifactId>json-simple</artifactId>
    <version>1.1</version>
</dependency>

<!-- Extra dependency remove this -->
<dependency>
      <groupId>org.dcm4che</groupId>
      <artifactId>dcm4che-audit</artifactId>
      <version>5.14.1</version>
    </dependency>
    
</dependencies>

 <repositories>
  	<repository>
  		<id>DCM</id>
  		<name>DCM4CHE</name>
  		<url>http://www.dcm4che.org/maven2/</url>
  	</repository>
  </repositories>
</project>